<script type="text/javascript" src="https://service.iamport.kr/js/iamport.payment-1.1.5.js"></script>

<script type="text/javascript">

	function fncAddPurchase() {
			$("form[name='addPurchase']").attr("method", "Post").attr("action", "/purchase/addPurchase").submit();
	}
	
	/* <td background="/images/ct_btnbg02.gif" class="ct_btn01" style="padding-top: 3px;">
	<a href="javascript:fncAddPurchase();">구매</a>
	</td> */
	
	$(function() {
		$("td.ct_btn01:contains('구매')").on("click", function() {
			
			if($("select[name='paymentOption']").val()==3){
				console.log("시작")
						$.ajax({
							url:"/kakaoPay/json/addPurchaseKakaoReady/"+$("input[name='prodNo']").val(),
							method:"POST",
							data:{
								divyAddr : $("input[name='divyAddr']").val(),
								paymentOption : $("select[name='paymentOption']").val(),
								receiverPhone : $("input[name='receiverPhone']").val(),
								divyRequest : $("input[name='divyRequest']").val(),
								divyDate : $("input[name='divyDate']").val()
							},
							dataType:"json",
							success : function(JSONData, status) {
								console.log(JSONData);
								if(status=200){
									console.log("success");
									console.log("response 받은 tid code : "+JSONData.tid);
									var box = window.open(JSONData.next_redirect_pc_url,
											"payPop",
											"left=300, top=700, width=400, height=700, marginwidth=0, marginheight=0, scrollbars=no, scrolling=no, menubar=no, resizable=no");
									
								}else{
									alert(status);
								}
								
								
							}
						})	
				
					
			}else{
				fncAddPurchase();
			}
			
		})
	});

</script>
</head>

